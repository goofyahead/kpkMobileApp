<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/card_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    
    <ImageView

        android:scaleType="centerCrop"
        android:id="@+id/dish_image"
        android:background="@color/gray"
        android:layout_width="113dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_height="105dp" />

    <LinearLayout
        android:id="@+id/title_holder"
        android:layout_toRightOf="@+id/dish_image"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/dish_name"
            style="@style/body_emphasized"
            android:text="Mejilones"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dish_price"
            style="@style/header_3_light"
            android:text="39e"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/more_info"
        android:layout_below="@+id/title_holder"
        android:layout_toRightOf="@+id/dish_image"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="47dp">

        <RelativeLayout
            android:id="@+id/more_info_relative_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_info"/>
                <TextView
                    android:layout_marginLeft="9dp"
                    android:text="@string/more_info"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="@color/neutral"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <View
                android:layout_marginBottom="2dp"
                android:layout_alignParentRight="true"
                android:background="@color/neutral"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_to_cart_relative_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/add_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_add_to_cart"/>
                <TextView
                    android:layout_marginLeft="9dp"
                    android:text="@string/add"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="@color/neutral"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>