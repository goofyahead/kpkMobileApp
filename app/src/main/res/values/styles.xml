<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/light_darker</item>
    </style>

    <style name="searchEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/button_light</item>
    </style>

    <style name="orangeTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/error</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/dark_darker</item>
        <item name="tabTextAppearance">@style/button_light</item>
        <item name="tabSelectedTextColor">@color/status_bar_icon</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="orangeSpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@color/error</item>
        <item name="android:dropDownSelector">@drawable/icon_dropdown_arrow_down_light</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="SpinnerItemTheme" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="header_1_light" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="header_2" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="header_2_success" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="header_2_neutral" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_lighter</item>
    </style>

    <style name="header_3_emphasized" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="header_3" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="header_3_neutral" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="header_3_red" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="body_emphasized" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/dark_darker</item>
    </style>

    <style name="drawer_button" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="body" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="body_neutral" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
